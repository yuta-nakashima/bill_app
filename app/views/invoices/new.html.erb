<h1>請求書</h1>

<%= link_to "戻る", bills_path %>

<%= form_with model:@invoice, url:"#", local: true do |f| %>
  <%= f.date_field :datetime, placeholder:"請求月"%>
  <%= f.collection_select :company_id, Company.all, :id, :company_name %>
  <%= f.text_field :invoice_item, placeholder: "請求項目"%>
  <%= f.text_field :invoice_price, placeholder: "単価"%>
  <%= f.text_field :invoice_count, placeholder: "数量"%>
  <%= f.text_field :invoice_unit, placeholder: "単位"%>
  <%= f.text_field :invoice_total, placeholder: "合計"%>
  <%= f.text_field :invoice_tax, placeholder: "税"%>
  <%= f.text_area :invoice_comment, placeholder: "備考"%>
  <%= f.submit "作成"%>
<% end %>